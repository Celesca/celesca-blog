---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Timeline from '../components/Timeline.astro';

const experiences = [
    { 
      title: 'Software Engineer Intern', 
      company: 'Company A', 
      duration: 'June 2022 - August 2022',
      description: 'Worked on developing new features for the company\'s main product using React and Node.js. Collaborated with a team of 5 developers.'
    },
    { 
      title: 'Frontend Developer Intern', 
      company: 'Company B', 
      duration: 'January 2023 - March 2023',
      description: 'Designed and implemented user interfaces using modern frontend technologies. Improved website performance by 30%.'
    },
];
---

<Layout title="Celesca - Portfolio">
    <Hero 
        imageSrc="/profile.jpg" 
        quote="Your future is created by what you do today, not tomorrow." 
    />
    <section id="experience" class="section">
        <h2 class="section-title">Experience</h2>
        <Timeline experiences={experiences} />
    </section>
</Layout>

<style>
.section {
  padding: 5rem 0;
}

.section-title {
  position: relative;
  font-size: 2.5rem;
  margin-bottom: 3rem;
  text-align: center;
}

.section-title::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: var(--gradient);
  border-radius: 2px;
}
</style>